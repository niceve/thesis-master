root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.sh,make}]
indent_style = space
indent_size = 2

shell_variant      = bash  # --language-variant
binary_next_line   = true  # --binary-next-line
switch_case_indent = true  # --case-indent
